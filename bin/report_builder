#!/usr/bin/env ruby

require 'report_builder'

ARGV[1] ||= 'test_report'
ARGV[2] ||= [:html]
ARGV[3] ||= [:overview, :features, :errors]
ARGV[4] ||= false

options = {:json_path => ARGV[0], :report_path => ARGV[1], :report_types => ARGV[2], :report_tabs => ARGV[3], :compress_images => ARGV[4]}

ReportBuilder.build_report options